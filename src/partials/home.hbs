<section class="home" id="home">
    <div class="home__content container">
        <picture class="home__img">
            <img src="assets/person.png" alt="" class="rounded-lg">
        </picture>
        <div class="home__social_1">
            <a href={{ personal.github }} target="_blank" class="social-tag">
                <i class="icon-github social-icon"></i>
            </a>
            <a href={{ personal.twitter }} target="_blank" class="social-tag">
                <i class="icon-twitter social-icon"></i>
            </a>

            <a href={{ personal.linkedin }} target="_blank" class="social-tag">
                <i class="icon-linkedin social-icon "></i>
            </a>
        </div>
        <div class="home__data">
            <h1 class="home__title">{{ title }} </h1>
            <h3 class="home__subtitle">{{ sub_title }}</h3>
            <p class="home__description">{{ content }}</p>
            <a href="#contact" class="btn">Say Hello ! </a>
        </div>        
    </div>
</section>